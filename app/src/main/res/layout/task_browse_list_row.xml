<?xml version="1.0" encoding="utf-8"?>
<com.jenny.diary.task.TaskBrowseElement xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:onClick="displayTask">
    <TableLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:stretchColumns="0"
        android:padding="5dp">

        <TableRow android:onClick="displayTask">
            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:id="@+id/task_browse_list_row_header"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:id="@+id/task_browse_list_row_time"
                android:gravity="right" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/delete"
                android:id="@+id/task_browse_list_row_delete"
                android:onClick="deleteTask"/>

            <TextView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:id="@+id/task_browse_list_row_id"
                android:visibility="invisible" />

        </TableRow>
    </TableLayout>

</com.jenny.diary.task.TaskBrowseElement>